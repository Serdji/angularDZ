.mail-box
  position: relative
  width: 100%
  padding: 50px 20px 0 20px
  box-sizing: border-box
  border: 1px solid gray
  margin-top: 150px;

  &__exit
    display: flex
    width: 100%
    align-items: center
    justify-content: space-between

  &__button
    display: flex
    height: 27px
    width: 60px
    margin-left: 10px
    border: 1px solid gray
    align-items: center
    justify-content: center
    cursor: pointer
    &:hover
      box-shadow: 0 0 6px 0 rgba(0,0,0,0.75);
    &:active
      background darkgrey

  &__user
    display: flex
    align-items: center
    justify-content: space-between
    position: absolute
    top: -39px;
    left: -39px;
    background-color: #ffffff
    padding: 10px

  &__logo
    border: 1px solid gray
    border-radius: 50%
    overflow: hidden
    width: 50px
    height: 50px
    margin-right: 10px
    img
      width: 100%

  &__name
    font-size: 24px
    font-weight: bold

  &__massage
    display: block
    font-size: 24px
    font-weight: bold
    color: green
    text-align: center
    margin-bottom: 20px
