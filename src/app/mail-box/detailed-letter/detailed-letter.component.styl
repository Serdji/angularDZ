.detailed-letter
  position: relative
  margin-top: 150px
  border: 1px solid gray;
  width: 100%
  padding: 40px 20px 20px 20px
  box-sizing: border-box

  &__title
    font-size: 24px
    font-weight: bold
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    top: -28px;
    left: -15px;
    background-color: #fff;
    padding: 10px;

  &__message
    line-height: 1.5
    font-size: 18px
