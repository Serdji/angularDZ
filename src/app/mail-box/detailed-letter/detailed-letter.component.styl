.detailed-letter
  position: relative
  border: 1px solid gray
  width: 100%
  padding: 40px 20px 20px 20px
  box-sizing: border-box
  margin-bottom: 50px

  &__title
    font-size: 24px
    font-weight: bold
    display: flex
    align-items: center
    justify-content: space-between
    position: absolute
    top: -28px
    left: -15px
    background-color: #fff
    padding: 10px

  &__from
    font-size: 20px
    margin: 10px 0
    font-weight: bold

  &__message
    line-height: 1.5
    font-size: 18px

  &__button-write-letter
    display: flex
    border: 1px solid gray
    align-items: center
    justify-content: center
    cursor: pointer
    position: absolute
    bottom: -16px
    left: 50%
    padding: 5px
    margin-left: -37px
    background: #ffffff
    box-shadow: 0 14px 0 20px rgba(255,255,255,1)
    &:hover
      background darkgrey
    &:active
      background #636363
      color azure
