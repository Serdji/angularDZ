.letter
  position: relative
  width: 100%
  height: 170px
  border: 1px solid gray;
  margin-bottom: 30px
  padding: 20px
  box-sizing: border-box

  &__title,
  &__from
    font-size: 18px
    font-weight: bold
    margin-bottom: 10px

  &__from
    position: absolute
    top: -24px
    left: -14px
    background-color: #ffffff
    padding: 10px


  &__mess
    color:#000;
    position:relative;
    z-index:-1;
    height: 56px
    overflow: hidden

  &__buttons
    position: absolute
    bottom: 20px
    left: 20px
    right: 20px
    display: flex
    justify-content: space-between

  &__button
    display: flex
    height: 27px
    width: 60px
    border: 1px solid gray
    align-items: center
    justify-content: center
    cursor: pointer
    padding: 0 5px
    &:hover
      box-shadow: 0 0 6px 0 rgba(0,0,0,0.75);
    &:active
      background darkgrey
